<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="138dp"
        android:orientation="horizontal">

        <LinearLayout android:layout_width="136dp"
            android:layout_height="164dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="97dp"
                android:layout_height="30dp"
                android:text="First Name"
                android:id="@+id/textView_FirstName"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:textSize="18dp"
                android:layout_weight="0.05" />

            <TextView
                android:layout_width="97dp"
                android:layout_height="30dp"
                android:text="Last Name"
                android:id="@+id/textView_LastName"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="97dp"
                android:layout_height="30dp"
                android:text="Email"
                android:id="@+id/textView_Email"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="164dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="235dp"
                android:layout_height="30dp"
                android:text="First Name"
                android:id="@+id/textViewF"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="31dp"
                android:textSize="18dp"
                android:layout_weight="0.00" />

            <TextView
                android:layout_width="235dp"
                android:layout_height="30dp"
                android:text="Last Name"
                android:id="@+id/textViewL"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="11dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="235dp"
                android:layout_height="30dp"
                android:text="Email"
                android:id="@+id/textViewE"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textSize="18dp"
                android:layout_marginTop="11dp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:text="Thank you! You have been successfully registered!"
        android:id="@+id/textView_Alert"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:lines="2"
        android:textSize="20dp" />

    <Button
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:text="BACK TO LOG IN"
        android:id="@+id/BackLoginButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mybutton"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:onClick="onBackToLoginClick"/>

</LinearLayout>
