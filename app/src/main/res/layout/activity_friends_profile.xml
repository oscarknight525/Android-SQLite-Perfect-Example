<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/img_viewfriend_profile"
            android:src="@mipmap/profile_image"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penny West"
            android:id="@+id/txt_friend_fullname"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorBackgroundButton" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:id="@+id/textViewF"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginLeft="40dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Penny"
                android:id="@+id/txt_friend_firstname"
                android:textSize="18dp"
                android:layout_marginLeft="50dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:id="@+id/textViewL"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginLeft="40dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="West"
                android:id="@+id/txt_friend_lastname"
                android:textSize="18dp"
                android:layout_marginLeft="50dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/textViewE"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginLeft="40dp" />

            <TextView
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:text="pennyw@gmail.com"
                android:id="@+id/txt_friend_email"
                android:textSize="18dp"
                android:layout_marginLeft="91dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:id="@+id/textView4"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginLeft="40dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="222-222-2222"
                android:id="@+id/txt_friend_phone"
                android:textSize="18dp"
                android:layout_marginLeft="17dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:id="@+id/textView7"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginLeft="40dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Happy Forever!"
                android:id="@+id/txt_friend_description"
                android:textSize="18dp"
                android:layout_marginLeft="42dp" />
        </LinearLayout>

        <Button
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/btn_friend_profile_back"
            android:layout_marginTop="40dp"
            android:background="@color/colorBackgroundButton"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:layout_marginLeft="250dp" />

    </LinearLayout>

</LinearLayout>
