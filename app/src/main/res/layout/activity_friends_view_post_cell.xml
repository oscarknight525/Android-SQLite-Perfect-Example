<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016/07/18"
        android:id="@+id/txtDate"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtDescription"
        android:layout_marginLeft="20dp"
        android:padding="5dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/img_friend_postphoto"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:src="@mipmap/photo"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="126dp"
        android:layout_height="40dp"
        android:text="Make Comment"
        android:id="@+id/btn_makecomment"
        android:layout_gravity="right"
        android:layout_marginRight="21dp"
        android:background="@drawable/bk_textfield"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_make_comment"
        android:visibility="gone">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/edt_comment"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:padding="4dp"
            android:background="@drawable/bk_textfield"
            android:hint="Make Comment..." />


        <Button
            android:layout_width="126dp"
            android:layout_height="40dp"
            android:text="Send Comment"
            android:id="@+id/btn_sendcomment"
            android:layout_gravity="right"
            android:layout_marginRight="21dp"
            android:background="@drawable/mybutton"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_comments"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:scrollbars="none"
            android:listSelector="@android:color/transparent" />
    </LinearLayout>

</LinearLayout>
