<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobile.lance.iconnect.iConnect.Credential.MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/colorWhite">

    <EditText
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/TextLoginEmail"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/bk_textfield"
        android:hint="Email"
        android:textSize="20dp" />

    <EditText
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/TextLoginPassword"
        android:layout_alignParentStart="true"
        android:hint="Password"
        android:layout_marginTop="20dp"
        android:background="@drawable/bk_textfield"
        android:textSize="20dp"/>

    <Button
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:text="LOG IN"
        android:id="@+id/LoginButton"
        android:layout_below="@+id/TextPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/mybutton"
        android:textColor="@color/colorWhite"
        android:onClick="onLoginClick"
        android:textSize="20dp" />

    <Button
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:text="SIGN UP FOR ICONNECT"
        android:id="@+id/SignupButton"
        android:layout_below="@+id/LoginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/mybutton"
        android:textColor="@color/colorWhite"
        android:onClick="onRegisterClick"
        android:textSize="20dp" />
</LinearLayout>
