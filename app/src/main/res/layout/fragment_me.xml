<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewMe" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:id="@+id/EditProfileButton"
                android:textColor="@color/colorWhite"
                android:background="@drawable/mybutton"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="30dp" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/img_viewprofile_photo"
                android:src="@mipmap/profile_image"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Albert Cook"
                android:id="@+id/textViewName"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/colorBackgroundButton" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_marginTop="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:id="@+id/textViewF"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Albert"
                    android:id="@+id/textViewFName"
                    android:textSize="18dp"
                    android:layout_marginLeft="50dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:id="@+id/textViewL"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cook"
                    android:id="@+id/textViewLName"
                    android:textSize="18dp"
                    android:layout_marginLeft="50dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:id="@+id/textViewE"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="40dp" />

                <TextView
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:text="acook@gmail.com"
                    android:id="@+id/textViewEmailAddress"
                    android:textSize="18dp"
                    android:layout_marginLeft="91dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:id="@+id/textView4"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="555-555-5555"
                    android:id="@+id/textViewPhonenumber"
                    android:textSize="18dp"
                    android:layout_marginLeft="17dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:id="@+id/textView7"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8000 York Rd"
                    android:id="@+id/textViewAddress"
                    android:textSize="18dp"
                    android:layout_marginLeft="70dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:id="@+id/textView9"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Towson"
                    android:id="@+id/textViewCity"
                    android:textSize="18dp"
                    android:layout_marginLeft="105dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:id="@+id/textView11"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MD"
                    android:id="@+id/textViewState"
                    android:textSize="18dp"
                    android:layout_marginLeft="95dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zip Code"
                    android:id="@+id/textView13"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="21252"
                    android:id="@+id/textViewZipCode"
                    android:textSize="18dp"
                    android:layout_marginLeft="66dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birth Date"
                    android:id="@+id/textView15"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="08/23/1980"
                    android:id="@+id/textViewBirthDate"
                    android:textSize="18dp"
                    android:layout_marginLeft="58dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:id="@+id/textView17"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:id="@+id/textViewGender"
                    android:textSize="18dp"
                    android:layout_marginLeft="80dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:id="@+id/textView19"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guess?"
                    android:id="@+id/textViewDescription"
                    android:textSize="18dp"
                    android:layout_marginLeft="45dp" />
            </LinearLayout>

            <Button
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:text="Log out"
                android:id="@+id/LogoutButton"
                android:textColor="@color/colorWhite"
                android:background="@drawable/mybutton"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="30dp"
                android:onClick="onLogoutClick"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
