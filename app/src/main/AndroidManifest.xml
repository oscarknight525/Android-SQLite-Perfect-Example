<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobile.lance.iconnect">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".iConnect.Credential.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".iConnect.Credential.RegisterActivity"
            android:label="Register"/>
        <activity android:name=".iConnect.Credential.RegisterSuccessActivity"
            android:label="Register"/>
        <activity android:name=".iConnect.notification.NotificationActivity"
            android:label="Notifications"/>
        <activity android:name=".iConnect.myPost.CreatePostActivity"
            android:label="Create Post" />
        <activity android:name=".iConnect.myPost.MyPostActivity"
            android:label="My Post"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".iConnect.EditProfileActivity"
            android:label="Edit My Profile" />
        <activity android:name=".iConnect.friends.find.FindFriendsActivity"
            android:label="Find Friends"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".iConnect.friends.friendrequest.FriendsRequestActivity"
            android:label="Friends Request" />
        <activity android:name=".iConnect.friends.friendsviewposts.FriendsViewPostActivity"
            android:label="Friends Request"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".iConnect.friends.friendslist.FriendProfile"
            android:label="Friends Request" />

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

</manifest>